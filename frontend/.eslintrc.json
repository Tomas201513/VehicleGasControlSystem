

{
    "plugins": ["react"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": 
   [ "eslint:recommended" , "plugin:react/recommended"]
  ,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }},
  "rules": {
    "react/react-in-jsx-scope": "off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-console": [
      "warn"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true,
        "ignoreStrings": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "newline-per-chained-call": [
      "error",
      { "ignoreChainWithDepth": 2 }
    ]
  }
}
